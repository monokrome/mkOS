# mkOS fstab - generated by installer
# <file system>         <mount point>  <type>  <options>                                     <dump> <pass>

# EFI System Partition
UUID={{efi_uuid}}       /boot/efi      vfat    defaults,noatime                              0      2

# Root filesystem (btrfs on LUKS)
/dev/mapper/cryptroot   /              btrfs   compress=zstd:1,ssd,noatime,subvol=@          0      0

# Home (btrfs subvolume)
/dev/mapper/cryptroot   /home          btrfs   compress=zstd:1,ssd,noatime,subvol=@home      0      0

# Snapshots (btrfs subvolume)
/dev/mapper/cryptroot   /.snapshots    btrfs   compress=zstd:1,ssd,noatime,subvol=@snapshots 0      0

# tmpfs
tmpfs                   /tmp           tmpfs   defaults,nosuid,nodev                         0      0
