{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "mkOS Manifest",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "hostname": { "type": "string" },
        "timezone": { "type": "string" },
        "locale": { "type": "string" },
        "keymap": { "type": "string" }
      }
    },
    "disk": {
      "type": "object",
      "properties": {
        "device": { "type": "string" },
        "encryption": { "type": "boolean", "default": true },
        "encryption_type": { "type": "string", "enum": ["luks2"], "default": "luks2" },
        "filesystem": { "type": "string", "enum": ["btrfs", "ext4"], "default": "btrfs" },
        "subvolumes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "mountpoint": { "type": "string" }
            },
            "required": ["name", "mountpoint"]
          }
        }
      }
    },
    "desktop": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "seat_manager": { "type": "string", "enum": ["seatd", "elogind"] },
        "display_manager": { "type": "string", "enum": ["greetd", "ly"] },
        "greeter": { "type": "string", "enum": ["tuigreet", "regreet", "gtkgreet"] },
        "user_services": { "type": "boolean", "default": false }
      }
    },
    "swap": {
      "type": "object",
      "properties": {
        "zram": { "type": "boolean", "default": false },
        "zram_size": { "type": "integer", "minimum": 1 },
        "swapfile": { "type": "boolean", "default": false },
        "swapfile_size": { "type": "integer", "minimum": 1 },
        "swappiness": { "type": "integer", "minimum": 0, "maximum": 100, "default": 20 }
      }
    },
    "audio": { "type": "boolean", "default": false },
    "packages": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "array",
          "items": { "type": "string" }
        },
        "disable": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "users": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "shell": { "type": "string" },
          "groups": {
            "type": "array",
            "items": { "type": "string" }
          },
          "home": { "type": "string" }
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" },
          "source": { "type": "string" },
          "mode": { "type": "string" }
        },
        "required": ["path"]
      }
    },
    "distro": {
      "type": "string",
      "enum": ["artix", "void"],
      "default": "artix"
    }
  }
}
